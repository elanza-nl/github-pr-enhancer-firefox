{
  "manifest_version": 2,
  "name": "GitHub PR Enhancer",
  "version": "2.0.0",
  "description": "Display reviewers in GitHub PR list view, and allow filtering by pending reviews.",
  "permissions": [
    "storage",
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "128": "icons/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "github-pr-enhancer@example.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
